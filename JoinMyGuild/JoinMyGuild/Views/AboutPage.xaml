<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JoinMyGuild.Views.AboutPage"
             xmlns:vm="clr-namespace:JoinMyGuild.ViewModels"
             Title="{Binding Title}">    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Frame HorizontalOptions="Fill" BackgroundColor="AliceBlue">
            <Label HorizontalOptions="Center" Margin="2" Text="Wanna Join My Guild?" FontAttributes="Bold"/>
        </Frame>
    </StackLayout>
</ContentPage>
